<!DOCTYPE html>
<html lang="cs-cz">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Lukáš Trojan">
    <title>@ViewData["Title"] - PojistovnaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PojistovnaApp.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/alert.js"></script>
</head>
<body class="bg-light">
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PojistovnaApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-muted" asp-area="" asp-controller="Pojistenec" asp-action="Index">Pojištěnec</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" asp-area="" asp-controller="Pojisteni" asp-action="Index">Pojištění</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-muted" asp-area="" asp-controller="PojistnaUdalost" asp-action="Index">Události</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-muted" asp-area="" asp-controller="Home" asp-action="About">O aplikaci...</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

