@model PojistovnaApp.Models.PojistnaUdalost

@{
    ViewData["Title"] = "Pojistná událost";
}

<h1>@ViewData["Title"]</h1>

<section>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CastkaPoskozeni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CastkaPoskozeni)
        </dd>
    </dl>

    <div class="row mt-5">
        <div class="col-md-8 text-left">
            @if (User.IsInRole("admin"))
            {
                <!-- zobrazí se všem uživatelům s rolí "admin" -->
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-controller="Pojisteni" asp-route-Id="@Model.PojisteniId"
                       class="btn btn-outline-secondary rounded-3">Zpět</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-outline-warning mx-2 rounded-3">Editovat</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-outline-danger rounded-3">Odstranit</a>
                </div>
            }
            else
            {
                <!-- zobrazí se všem uživatelům bez role "admin" -->
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-controller="Pojisteni" asp-route-Id="@Model.PojisteniId"
                       class="btn btn-outline-secondary rounded-3">Zpět</a>
                </div>
            }
        </div>
    </div>
</section>

