@model PojistovnaApp.Models.PojistnaUdalost

@{
    ViewData["Title"] = "Smazat pojistnou událost";
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<h3 class="text-danger">Jste si jistý, že chccete odstranit tuto pojistnou událost?</h3>
<hr />

<section>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CastkaPoskozeni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CastkaPoskozeni)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-group col-md-3 text-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-outline-danger" />
    </form>
</section>
